index.html<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>MindGlitch AR</title>
<style>
body { margin:0; background:black; color:lime; font-family:Arial }
#ui { position:fixed; top:10px; left:10px; z-index:10 }
button, input { font-size:18px; margin:5px }
</style>
</head>

<body>
<div id="ui">
<input id="nick" placeholder="Nickname">
<button onclick="saveNick()">OK</button><br>
<button onclick="toggleLaser()">LASER</button>
</div>

<video id="cam" autoplay playsinline></video>
<canvas id="fx"></canvas>

<script>
const video = document.getElementById("cam");
const canvas = document.getElementById("fx");
const ctx = canvas.getContext("2d");
let laser = false;

navigator.mediaDevices.getUserMedia({video:true})
.then(s => video.srcObject = s);

canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

function saveNick(){
localStorage.setItem("nick",document.getElementById("nick").value);
document.getElementById("nick").style.display="none";
}

if(localStorage.getItem("nick")){
document.getElementById("nick").style.display="none";
}

function toggleLaser(){ laser=!laser; }

canvas.addEventListener("touchmove",e=>{
ctx.clearRect(0,0,canvas.width,canvas.height);
if(laser){
ctx.strokeStyle="red";
ctx.lineWidth=5;
ctx.beginPath();
ctx.moveTo(canvas.width/2,canvas.height);
ctx.lineTo(e.touches[0].clientX,e.touches[0].clientY);
ctx.stroke();
}
});
</script>
</body>
</html>















































































































































































































































































































































































































































































